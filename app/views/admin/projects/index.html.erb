This is the table for users needing project approval
<br/>
<br/>

<table class="table table-striped table-bordered">
	<td>Email</td>
	<td>First Name</td>
	<td>Last Name</td>
	<td>NickName</td>
	<td>Status</td>
	<td>Church</td>
	<td>Primary Role</td>
	<td>Login Provider</td>
	<td>Sign In Count</td>
	<td>Projects</td>
	<td>Action</td>

<% @users.each do |user| %>
<tr>
	<td><%= link_to user.email, user_path(user) %></td>
	<td><%= user.first_name %></td>
	<td><%= user.last_name %></td>
	<td><%= user.nickname %></td>
	<td><%= status(user.suspended) %></td>
	<td><%= user.church %></td>
	<td><%= user.primary_role %></td>
	<td><%= user.provider %></td>
	<td><%= user.sign_in_count %></td>
	<td>
	<div class="btn-group">
	  <button class="btn btn-mini">Projects</button>
	  <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
	    <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu">
		<% user.projects.each do |project| %>
	    <li><%= link_to project.name, admin_project_path(project)%></li>
		<% end %>
	  </ul>
	</div>
	</td>
	<td><%= link_to "View User", user_path(user), class: "btn btn-mini btn-info" %> <%= link_to "Approve for Projects", allow_project_posting_admin_project_path(user), method: :put, class: "btn btn-mini btn-warning"  %></td>
</tr>
<% end %>
</table>




Listing all projects
<br/>
<%= form_tag projects_path, method: :get do %>
	Search by language: <br/>
	<%= check_box_tag :open_projects, "open_projects", params[:open_projects] %> <%= label_tag :open_projects, "Search by open projects" %> <br/>
	<%= select_tag(:language, options_from_collection_for_select(ProgrammingLanguage.all, "id", "language", selected: params[:language]), include_blank: true, id: "lang_select") %> <br/>
	<%= label_tag :language, "Search by programming language" %><br/>
	<%= submit_tag "Search" %>
<% end %>
<br/>
<table id="projects" class="table table-striped table-bordered">
	<tbody>
	<tr>
		<td>Name</td>
		<td>Description</td>
		<td>License</td>
		<td>Organization</td>
		<td>Created by</td>
		<td>Created at</td>
		<td>Action</td>
	</tr>
	
	<%= render @projects %>
	</tbody>
</table>


