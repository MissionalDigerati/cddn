<% @events.each do |event| %>
<tr class="all_events">
	<td><%= event.title %></td>
	<td><%= event.details %></td>
	<td><%= event.address_1 %></td>
	<td><%= event.address_2 %></td>
	<td><%= event.city_province %></td>
	<td><%= event.state_id %></td>
	<td><%= event.country_id %></td>
	<td><%= event.zip_code %></td>
	<td><%= event.online_event %></td>
	<td><%= event.created_at %></td>
	<td><%= link_to_users_profile(event.attendees.first.user) %></td>
	<td><%= link_to "Delete Event", admin_event_path(event), method: :delete, class: "btn btn-danger btn-mini", confirm: "Are you sure?" %> <%= link_to "View Event", admin_event_path(event), class: "btn btn-info btn-mini" %></td>
</tr>
<% end %>
</table>