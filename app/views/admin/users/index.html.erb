<div class="container">

	<div class="form_container pull-left">
		<div class="section_header">
		    <h3>This is the users index</h3>
		    <br/><br/>
		</div>
	</div>

	<br/>
	<br/>

	<table class="table table-striped table-hover">
		<td>
			Email <span class="slash">/</span> First Name <span class="slash">/</span> Last Name <span class="slash">/</span> NickName
			<br/>
			Status <span class="slash">/</span> Event Approved <span class="slash">/</span> Project Approved 
			<br/>
			Primary Role <span class="slash">/</span> Login Provider <span class="slash">/</span> Sign In Count <span class="slash">/</span> Last sign in at
		</td>
		<td><span class="pull-right">Action</span></td>

		<% @users.each do |user| %>
			<tr>
				<td>
					<%= link_to user.email, user_path(user) %> <span class="slash">/</span> <%= return_input_or_nil(user.first_name) %> <span class="slash">/</span> <%= return_input_or_nil(user.last_name) %> <span class="slash">/</span> <%= return_input_or_nil(user.nickname) %>
					<br/>
					<%= status(user.suspended) %> <span class="slash">/</span> <%= yes_or_no(user.event_approved) %> <span class="slash">/</span> <%= yes_or_no(user.project_approved) %>
					<br/>
					<%= return_input_or_nil(user.primary_role) %> <span class="slash">/</span> <%= return_input_or_nil(user.provider) %> <span class="slash">/</span> <%= return_input_or_nil(user.sign_in_count) %> <span class="slash">/</span> <%= return_input_or_nil(user.last_sign_in_at.to_date) %>
				</td>
				<td>
					<div class="btn-group pull-right">
						<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">Action <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to "View User", user_path(user) %>
							</li>
							<li class="divider"></li>
							<li>
								<%= suspend_button(user) %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to "Delete", admin_user_path(user), method: :delete, confirm: "Are you sure?" %>
							</li>
						</ul>
					</div> 
				</td>

			</tr>
		<% end %>
	</table>

</div>