<div class="container">
	<div class="row">
		<div class="span4">
			
			<h2>This is the dashboard for </h2>
			<br/>
			<%= @user.email %>
			<%= @user.nickname %>
			
			<%= @user.first_name if @user.first_name.present? %>
			<%= @user.last_name if @user.last_name.present? %>
			<%= @user.church if @user.church.present? %>
			<%= @user.bio if @user.bio.present?%>
			<%= @user.city_province if @user.city_province.present? %>
			<%= @user.primary_role if @user.primary_role.present? %>
			<%= State.display_state_name(@user.state_id) if @user.state_id.present? %>
			<%= display_country_name(@user.country_id) if @user.country_id.present? %>
			
			<% @user.networks.each do |network| %>
				<%= network_service(network) %><%= networking_link(network) %>
			<% end %>
			<br/>

			<% if @user.event_approved == false %>
				You are not currently approved for event creation.
				<br/><br/>
			<% end %>
			
			<% if @user.project_approved == false %>
				You are not currently approved for project creation.
				<br/><br/>
			<% end %>
			
			<% if @user.programming_languages.present? %>
				Language tags:<br/>
				<% @user.programming_languages.each do |lang| %>
					<%= lang.language %><br/>
				<% end %>
			<% end %>
			<br/>
			
			<%= link_to 'Account Settings', edit_user_registration_path, id: "account_settings" %><br/>
			<%= link_to 'Edit Account Details', edit_user_path(@user), id: "edit_account_details" %><br/>
			<%= link_to 'View My Profile / Brag page', user_path(@user) %>

		</div> <!-- span 3 -->

			
				
		<% if @approvals.present? %>
			<div class="span4">
				<div class="form_container pull-left">
					<div class="section_header">
					    <h3>Members for Approval</h3>
					    <br/><br/>
					</div>
				</div>
				<table class="table table-hover" id="approvals">
					<tr>
						<th>Project <span class="slash">/</span> User</th>
						<th><span class="pull-right">Action</span></th>
					</tr>
					<%= render @approvals %>
				</table>
				<hr class="table_color"/>
			</div>
		<% end %>
		
		<% if @events.present? %>
			<div class="span4">
				<div class="form_container pull-left">
					<div class="section_header">
					    <h3>Upcoming Events</h3>
					    <br/><br/>
					</div>
				</div>
				<table class="table table-hover" id="dash_events">
					<tr>
						<th>Event <span class="slash">/</span> Date(m/d/y)</th>
						<th><span class="pull-right">Action</span></th>
					</tr>
						<%= render @events, dash: true %>
				</table>
				<hr class="table_color"/>
			</div>
		<% end %>
		
		<%= paginate @approvals, :theme => 'twitter-bootstrap' %>
		<div class="hidden"><%= paginate @events, :theme => 'twitter-bootstrap' %></div>
								
	</div><!-- row -->
</div>