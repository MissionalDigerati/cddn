
<%= form_for(@project) do |f| %>
	<br/>
	<br/>
	<div class="span3 offset5">
		<div><%= f.label :name, class: "pull-left" %><span class="required">*</span>
		<%= f.text_field :name %></div>
	
		<div><%= f.label :description, class: "pull-left" %><span class="required">*</span>
		<%= f.text_area :description, rows: 5 %></div>
	
		<div><%= f.label :license_name, class: "pull-left" %>
		<%= f.text_field :license_name, data: {autocomplete_source: License.order(:license_title).map(&:license_title)} %></div>
	
		<div><%= f.label :organization, class: "pull-left" %>
		<%= f.text_field :organization %></div>
	
		<div><%= f.label :accepts_requests, "Accept requests?" %>
			<%= f.radio_button :accepts_requests, true, checked: true, class: "pull-left" %></div>
			<%= f.label :accepts_requests, "Yes", class: "pull-left" %>
		<%= f.radio_button :accepts_requests, false, class: "pull-left" %>
		<%= f.label :accepts_requests, "No"%>
		
		<br/>
	</div>
		
		
	<div class="span3 offset2">
		Social Networking<br/>
		Add your social networking links to your profile
		<br/>
		<%= f.fields_for :networks do |builder| %>
			<%= render partial: '/layouts/network_fields', locals: {f: builder} %>
		<% end %>
		<%= link_to_add_fields "Add Social Network", f, :networks %>
		<br/><br/>
		
		Programming languages<br/>
		<div>
		<%= f.label :lang_tokens, "Languages" %>
		<%= f.text_field :lang_tokens, class: "lang_tokens", data: {load: @project.programming_languages} %>
		</div>
		<br/>
		
		<div><%= f.submit "Submit" %></div>
		<span class="required">*</span> = Required
	</div>
		
	
	
<% end %>