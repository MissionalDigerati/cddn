<%= content_for :head, auto_discovery_link_tag(:rss, projects_path(format: "rss")) %>
<div class="container">
	<%= link_to image_tag("feed-icon-28x28.png"), projects_path(format: "rss"), class: "pull-right"%>
<br/>
<%= form_tag projects_path, method: :get do %>
	<%= check_box_tag :open_projects, "open_projects", params[:open_projects] %> <%= label_tag :open_projects, "Search by open projects" %> <br/>
	Search by language: (autocompleting form)<br/>
	<%= text_field_tag "language", '', data: {autocomplete_source: languages_auto_path} %>
	<br/>
	<%= submit_tag "Search" %>
<% end %>
<br/>
<table id="projects" class="table table-striped table-bordered">
	<tbody>
	<tr>
		<td>Name</td>
		<td>Description</td>
		<td>License</td>
		<td>Organization</td>
		<td>Created by</td>
		<td>Created at</td>
		<td>Action</td>
	</tr>
	
	<%= render @projects %>
	</tbody>
</table>

<div class="span12">
	<%= paginate @projects, :theme => 'twitter-bootstrap' %>
</div>

</div>