Listing all projects that are open for accepting requests
<br/>
<%= form_tag projects_path, method: :get do %>
	Search by language: <br/>
	<%= select_tag :language, options_from_collection_for_select(ProgrammingLanguage.all, "id", "language"), include_blank: true, id: "lang_select" %> <br/>
	<%= submit_tag "Search" %>
<% end %>
<br/>
<table id="projects" class="table table-striped table-bordered">
	<tbody>
	<tr>
		<td>Name</td>
		<td>Description</td>
		<td>License</td>
		<td>Organization</td>
		<td>Created by</td>
		<td>Created at</td>
		<td>Action</td>
	</tr>
	
	<%= render @projects %>
	</tbody>
</table>

<%= paginate @projects, :theme => 'twitter-bootstrap' %>
