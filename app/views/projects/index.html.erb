<%= content_for :head, auto_discovery_link_tag(:rss, projects_path(format: "rss")) %>

<div class="container">

	<%= link_to image_tag("feed-icon-28x28.png"), projects_path(format: "rss"), class: "pull-right"%>
	<div class="clear"></div>
	<br/>

	<div class="form_container pull-left">
		<div class="section_header">
		    <h3>Listing All Projects</h3>
		    <br/><br/>
		</div>
	</div>

	<div class="pull-right">
		<%= form_tag projects_path, method: :get do %>
			Search by language: (autocompleting form)<br/>
			<%= text_field_tag "language", '', data: {autocomplete_source: languages_auto_path} %>
			<br/>
			<%= check_box_tag :open_projects, "open_projects", params[:open_projects], class: "pull-right" %> <%= label_tag :open_projects, "Search by open projects" %> <br/>
			<%= submit_tag "Search", class: "pull-right theme_button" %>
		<% end %>
		<div class="clear"></div>
		<br/>
	</div>
	<br/>

	<table id="projects" class="table table-striped table-hover">
		<tbody>
		<tr>
			<td>Project <span class="slash">/</span> Creator Name <span class="slash">/</span> Organization</td>
			<td><span class="pull-right">Action</span></td>
		</tr>
		
		<%= render @projects %>
		</tbody>
	</table>

	<hr/>

	<div class="span12">
		<%= paginate @projects, :theme => 'twitter-bootstrap' %>
	</div>

</div>